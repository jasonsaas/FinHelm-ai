# Test Environment Configuration
# This file contains test-specific environment variables
# Safe to commit to version control (no real credentials)

NODE_ENV=test

# Test OAuth Credentials (Mock values)
SAGE_INTACCT_CLIENT_ID=test-sage-intacct-client-id
SAGE_INTACCT_CLIENT_SECRET=test-sage-intacct-client-secret
SAGE_INTACCT_REDIRECT_URI=http://localhost:3000/oauth/sage-intacct/callback
SAGE_INTACCT_DISCOVERY_URL=https://api-sandbox.intacct.com/oauth2/.well-known/openid_configuration
SAGE_INTACCT_TOKEN_URL=https://api-sandbox.intacct.com/oauth2/token
SAGE_INTACCT_API_URL=https://api-sandbox.intacct.com

QUICKBOOKS_CLIENT_ID=test-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=test-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/oauth/quickbooks/callback

# Test Security Configuration
JWT_SECRET=test-jwt-secret-for-testing-only
OAUTH_TOKEN_ENCRYPTION_KEY=test-encryption-key-32-characters-long
OAUTH_TOKEN_KEY_VERSION=test-v1
SESSION_SECRET=test-session-secret

# Test Database Configuration
TEST_DATABASE_URL=memory://test-db

# Feature Flags for Testing
ENABLE_COMPLIANCE_MONITORING=true
ENABLE_ADVANCED_AUDIT=true
RBAC_ENABLED=true
MOCK_OAUTH_RESPONSES=true

# Test-specific Settings
RUN_INTEGRATION_TESTS=false
TEST_TIMEOUT=30000
ENABLE_DEBUG_LOGS=false
MOCK_API_RESPONSES=true

# Rate Limiting (Disabled for Tests)
RATE_LIMIT_WINDOW_MS=0
RATE_LIMIT_MAX_REQUESTS=1000

# Test Data
TEST_ORGANIZATION_ID=test_org_123
TEST_USER_ID=test_user_123
TEST_COMPANY_ID=TEST_COMPANY_SANDBOX
TEST_REALM_ID=QB_SANDBOX_REALM_123

# Logging
LOG_LEVEL=error
AUDIT_LOG_LEVEL=warn

# Cache (Disabled for Tests)
CACHE_TTL=0
ENABLE_TOKEN_CACHING=false

# Performance Testing
LOAD_TEST_CONCURRENCY=5
LOAD_TEST_ITERATIONS=10
PERFORMANCE_THRESHOLD_MS=1000