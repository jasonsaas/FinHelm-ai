{
  "name": "finhelm-ai",
  "version": "1.0.0",
  "description": "AI-powered ERP insights for QuickBooks and Sage Intacct with Convex backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "deploy": "npx convex dev",
    "test": "node deploy-test-simple.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:all": "npx convex codegen && cd frontend && npm run build",
    "convex:generate": "npx convex codegen",
    "frontend:build": "cd frontend && npm run build",
    "deploy:netlify": "npm run build:all"
  },
  "keywords": [
    "ai",
    "erp",
    "quickbooks",
    "sage",
    "insights",
    "convex",
    "fintech"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "convex": "^1.26.0",
    "dotenv": "^17.2.1",
    "intuit-oauth": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.4",
    "typescript": "^5.3.0"
  }
}
