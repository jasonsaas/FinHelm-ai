{
  "name": "finhelm-ai",
  "version": "1.0.0",
  "description": "AI-powered ERP insights for QuickBooks and Sage Intacct with Convex backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "deploy": "npx convex dev",
    "test": "node deploy-test-simple.js",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.config.js",
    "test:e2e": "playwright test",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:all": "npx convex codegen && cd frontend && npm run build",
    "convex:generate": "npx convex codegen",
    "frontend:build": "cd frontend && npm run build",
    "deploy:netlify": "npm run build:all",
    "env:validate": "tsx scripts/validate-env.ts",
    "env:setup": "tsx scripts/setup-wizard.ts",
    "setup": "npm run env:setup"
  },
  "keywords": [
    "ai",
    "erp",
    "quickbooks",
    "sage",
    "insights",
    "convex",
    "fintech"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.3.0",
    "convex": "^1.26.0",
    "dotenv": "^17.2.1",
    "intuit-oauth": "^4.2.0",
    "openai": "^5.19.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^20.19.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.4",
    "typescript": "^5.3.0"
  }
}
