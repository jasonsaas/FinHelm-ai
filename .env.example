# Backend Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./erpinsight.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/erpinsight

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api-key-here

# QuickBooks Online OAuth 2.0
QBO_CLIENT_ID=your-quickbooks-app-client-id
QBO_CLIENT_SECRET=your-quickbooks-app-client-secret
QBO_ENVIRONMENT=sandbox
QBO_REDIRECT_URI=http://localhost:3000/auth/quickbooks/callback

# Vector Store Configuration
VECTOR_DB_PATH=data/vectors
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
GENERATE_SOURCEMAP=false