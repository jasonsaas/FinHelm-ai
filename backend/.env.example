# QuickBooks Online OAuth 2.0 Configuration
QBO_CLIENT_ID=your_quickbooks_client_id_here
QBO_CLIENT_SECRET=your_quickbooks_client_secret_here
QBO_ENVIRONMENT=sandbox
QBO_REDIRECT_URI=http://localhost:3000/auth/quickbooks/callback
QBO_SCOPE=com.intuit.quickbooks.accounting
QBO_API_BASE=https://sandbox-quickbooks.api.intuit.com
QBO_DISCOVERY_DOCUMENT=https://appcenter.intuit.com/api/v1/OpenID_sandbox

# xAI Grok Configuration
GROK_API_KEY=your_grok_api_key_here
GROK_API_BASE=https://api.x.ai/v1
GROK_MODEL=grok-beta
GROK_MAX_TOKENS=2000
GROK_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=sqlite:///./quickcauz.db

# Security
SECRET_KEY=your_secret_key_here_change_in_production_minimum_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application Settings
APP_NAME=QuickCauz.ai
DEBUG=True
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS (add your production domain)
CORS_ORIGINS=["http://localhost:3000","https://localhost:3000","https://yourdomain.com"]